=LET(
  data, FILTER(V:V, ISNUMBER(V:V)),
  count, ROWS(data),
  result, IF(count < 2,
    "Not enough data",
    LET(
      lastVal, INDEX(data, count),
      prevVal, INDEX(data, count - 1),
      diff, lastVal - prevVal,
      perc, IF(prevVal=0, 0, diff / prevVal),
      TEXT(diff, "#,##0") & " (" & TEXT(perc, "0.00%") & ")"
    )
  ),
  result
)