Sub NormalizeSubjects()
    Dim ws As Worksheet
    Dim lastRow As Long
    Dim i As Long
    Dim original As String
    Dim cleaned As String
    
    Set ws = ThisWorkbook.Sheets(1) ' Change if needed
    lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row
    
    ' Header for cleaned column
    ws.Cells(1, 2).Value = "Cleaned Subject"
    
    For i = 2 To lastRow
        original = LCase(ws.Cells(i, 1).Value)
        ' Remove digits and punctuation
        cleaned = Replace(original, ".", "")
        cleaned = Replace(cleaned, ",", "")
        cleaned = Replace(cleaned, "-", " ")
        cleaned = Replace(cleaned, "_", " ")
        cleaned = Replace(cleaned, ":", "")
        cleaned = Replace(cleaned, ";", "")
        cleaned = Replace(cleaned, "/", "")
        cleaned = Replace(cleaned, "\", "")
        cleaned = Replace(cleaned, "(", "")
        cleaned = Replace(cleaned, ")", "")
        cleaned = Replace(cleaned, "[", "")
        cleaned = Replace(cleaned, "]", "")
        
        Dim j As Integer
        For j = 0 To 9
            cleaned = Replace(cleaned, CStr(j), "")
        Next j
        
        ' Remove extra spaces
        cleaned = WorksheetFunction.Trim(cleaned)
        
        ws.Cells(i, 2).Value = cleaned
    Next i
    
    MsgBox "Subjects normalized in column B.", vbInformation
End Sub