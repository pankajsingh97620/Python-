Private Sub UserForm_Initialize()
    cmbCategory.Clear
    cmbCategory.AddItem "XYZ"
    cmbCategory.AddItem "ABC"
    cmbCategory.AddItem "DEF"
End Sub

Private Sub btnOK_Click()
    If cmbCategory.ListIndex = -1 Then
        MsgBox "Please select a category from the dropdown.", vbExclamation
    Else
        Me.Hide
    End If
End Sub